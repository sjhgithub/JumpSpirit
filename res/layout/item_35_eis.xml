<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_messagelist"
    android:orientation="vertical" >

    <include layout="@layout/include_35_eis_head" />

    <RelativeLayout
        android:id="@+id/layout_eis_child"
        android:layout_width="fill_parent"
        android:layout_height="53.666dp"
        android:duplicateParentState="true"
        android:paddingLeft="20dp"
        android:paddingRight="13.0dp" >

        <cn.mailchat.view.RoundImageView
            android:id="@+id/contact_img_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/icon_image_bg"
            android:contentDescription="@null"
            app:round_view_radius="2dp" />

        <LinearLayout
            android:id="@+id/layout_cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8.0dip" >

            <!--
                 <TextView
                android:id="@+id/tv_used_mailchat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="3dp"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="@string/iUsedMailchat"
                android:textColor="#006dc3"
                android:textSize="11sp" />
            -->

            <CheckBox
                android:id="@+id/checkbox_child"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_cb1"
            android:layout_toRightOf="@id/contact_img_head"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:duplicateParentState="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_leader"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@null"
                    android:paddingLeft="3dp"
                    android:src="@drawable/icon_leader"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_used_mailchat"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/iUsedMailchat"
                    android:textColor="#006dc3"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/muliple_select_bottom_view"
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="13.3dip"
                android:layout_marginRight="13.3dip"
        android:background="@drawable/gray" />
</LinearLayout>