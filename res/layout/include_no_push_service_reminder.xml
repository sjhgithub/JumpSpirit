<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_no_push_service_reminder"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@color/deep_blue">

    <TextView
        android:id="@+id/tv_no_push_service_reminder"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13.3dp"
        android:layout_toLeftOf="@+id/iv_no_push_service_reminder"
        android:gravity="center"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_no_push_service_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="13.3dp"
        android:background="@drawable/icon_white_cancel" />

</RelativeLayout>