<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="50dip" >

    <TextView
        android:id="@+id/tv_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_nomail"
        android:gravity="center"
        android:paddingTop="15dp" 
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
          android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/icon_tab_mail_n" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:contentDescription="@null"
            android:src="@drawable/icon_tab_message_n" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:contentDescription="@null"
            android:src="@drawable/icon_tab_contact_n" />

    </LinearLayout>

    <TextView
        android:id="@+id/att_square_type"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="@string/goable_searh_tips"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />

</LinearLayout>