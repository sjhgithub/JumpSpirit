<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_view_reload"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/message_view_reload_icon_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/back_from_left"
        android:src="@drawable/icon_net_info" />

    <TextView
        android:id="@+id/message_view_reload_button"
        android:layout_width="69.3dp"
        android:layout_height="26.7dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/back_from_left"
        android:background="@drawable/rightcorner_bg_n"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="0dip"
        android:text="@string/message_view_reload_button"
        android:textColor="@color/white"
        android:textSize="13.3sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/message_view_reload_icon_net"
        android:layout_toLeftOf="@id/message_view_reload_button"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message_view_reload_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_view_reload_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/setting_select"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>