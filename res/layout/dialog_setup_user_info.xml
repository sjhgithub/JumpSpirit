<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoset_show_dialog_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circular_false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/infoset_dialog_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/infoset_show_dialog_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/info_set_gallery"
                android:textColor="@drawable/shape_circular_tc_selector"
                android:textSize="18.0sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#ff666666" />

            <TextView
                android:id="@+id/infoset_dialog_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/infoset_show_dialog_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/info_set_camera"
                android:textColor="@drawable/shape_circular_tc_selector"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>