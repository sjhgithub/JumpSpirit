<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_chatting_dialog"
    android:minWidth="280dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/operate_notice"
            android:textColor="@color/bg_title_right_txt"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:lineSpacingExtra="2dip"
            android:textColor="@color/gray_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/positiveButtonLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_bottom_dialog"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selecter_btn_dialog_left"
            android:text="@string/okay_action"
            android:textColor="@color/light_blue"
            android:textSize="16sp" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5dip"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selecter_btn_dialog"
            android:text="@string/cancel_action"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/third_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selecter_btn_dialog_right"
            android:text="@string/cancel_action"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/fourth_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dip"
            android:layout_weight="1"
            android:background="@drawable/selecter_btn_dialog_left_right"
            android:text="@string/cancel_action"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>