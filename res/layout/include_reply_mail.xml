<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_btn_voice_rcd_n"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <EditText
        android:id="@+id/et_reply_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:hint="@string/fast_reply_email"
        android:minHeight="40dp" 
        android:textSize="13.3sp"
        android:gravity="top"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="5dip"
        android:background="@drawable/icon_no_chat_list_conent"
        android:maxHeight="60.0dip"
        android:minHeight="25.0dip"
        android:minWidth="50.0dip"
        android:paddingLeft="5.0dip"
        android:paddingTop="6.0dip"
        android:text="@string/chatting_send"
        android:textColor="@color/white"
        android:textSize="13.3sp" />

</LinearLayout>