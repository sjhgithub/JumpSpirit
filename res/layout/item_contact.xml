<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_bg_messagelist"
    android:paddingLeft="13dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.7dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <cn.mailchat.view.RoundImageView
            android:id="@+id/iv_logo"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:background="@drawable/icon_image_bg"
            android:contentDescription="@null"
            app:round_view_radius="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="220dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="220dp"
                android:singleLine="true"
                android:textColor="@color/bg_group_set_txt"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/gray" />

</LinearLayout>