<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_chatting_dialog"
    android:layout_marginBottom="10dp"
    android:minWidth="280dp"
    android:orientation="vertical" >
    
	<ImageView
        android:id="@+id/img_mw_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|right"
        android:background="@drawable/icon_close_x"
        android:contentDescription="@null" />
    <ImageView
        android:id="@+id/img_mw_content"
        android:layout_width="280dp"
        android:layout_height="199dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:contentDescription="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="21dip"
        android:layout_marginBottom="21dip"
        android:lineSpacingExtra="2dip"
        android:maxWidth="240dip"
        android:textColor="#333333"
        android:textSize="16sp" 
        android:visibility="gone"/>

</LinearLayout>