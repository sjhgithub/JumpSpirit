<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comm_contact_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/back_from_left2"
    android:paddingTop="16dp" >

    <RelativeLayout
        android:id="@+id/layout_comm_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/comm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/star_contacts"
            android:textColor="#808080" />

        <cn.mailchat.view.hlistview.HListView
            android:id="@+id/mHListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comm_title"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@drawable/selector_bg_list_item"
            android:paddingTop="5dp"
            android:scrollbars="none" />
    </RelativeLayout>

</RelativeLayout>